<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bottom_bar_normal_bg"
    android:orientation="vertical" >
    <com.gzqining.inthegarden.common.TopBarLayout
        android:id="@+id/topbarlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        title="VIP详情" >

        <ImageButton
            android:id="@+id/top_layout_vip_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="15dp"
            android:paddingRight="18dp"
            android:src="@drawable/back_btn" />
    </com.gzqining.inthegarden.common.TopBarLayout>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="15dp"
	    android:text="尊敬的用户，您目前账号类型是："
	    android:textSize="18sp"
	    android:textColor="#dddddd"
	    />
	<ImageView
	    android:id="@+id/imageView_vip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_gravity="center"
	    android:src="@drawable/vip"
	    />
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@color/common_content_bg"
	    android:orientation="vertical"
	    android:layout_marginTop="30dp"
	    >
        <RelativeLayout
            android:id="@+id/see_vip_privilege"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_content_bg"
            android:padding="10dp" >
			<RelativeLayout
    			android:id="@+id/relativelayout1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                 >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/see_vip_privilege" />

                
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/relativelayout1"
                android:layout_marginLeft="8dp"
                android:text="查看特权"
                android:textColor="#BBBBBB"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/nickname_to"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/to_right" />
            
            
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:background="@color/common_bottom_bar_normal_bg" />
        <RelativeLayout
            android:id="@+id/upgrade_vip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_content_bg"
            android:padding="10dp" >
		<RelativeLayout
    			android:id="@+id/relativelayout2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                 >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upgrade_vip" />
                
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/relativelayout2"
                android:layout_marginLeft="8dp"
                android:text="升级VIP类型"
                android:textColor="#BBBBBB"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/to_right" />
        </RelativeLayout>
	</LinearLayout>
	<View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@color/common_bottom_bar_normal_bg" />
