<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bottom_bar_normal_bg"
    android:orientation="vertical" >
    <com.gzqining.inthegarden.common.TopBarLayout
        android:id="@+id/topbarlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        title="昵称" >

        <ImageButton
            android:id="@+id/top_layout_nickname_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:src="@drawable/back_btn" />
        <ImageButton
            android:id="@+id/top_layout_nickname_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:src="@drawable/right_icon" />
    </com.gzqining.inthegarden.common.TopBarLayout>
	<View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/common_bottom_bar_normal_bg" />

            <LinearLayout
                android:id="@+id/nickname_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:padding="10dp" >

                <EditText 
                    android:id="@+id/nickname_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@color/common_content_bg"
                    android:textColor="#DDDDDD"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="今天阳光格外明媚。"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/clean_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.05"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clean_icon" />
            </LinearLayout>
</LinearLayout>
