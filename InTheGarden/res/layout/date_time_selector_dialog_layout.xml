<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#444444" >

    <com.gzqining.inthegarden.act.dateselector.DateSelectorWheelView
        android:id="@+id/pdwv_date_time_selector_wheelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.gzqining.inthegarden.act.dateselector.DateSelectorWheelView>

    <FrameLayout
        android:id="@+id/fl_date_time_custom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pdwv_date_time_selector_wheelView"
        android:layout_marginTop="5dp"
        android:background="#444444"
        android:visibility="gone" >
    </FrameLayout>

</RelativeLayout>