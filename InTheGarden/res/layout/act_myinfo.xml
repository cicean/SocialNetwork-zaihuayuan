<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bottom_bar_normal_bg"
    android:orientation="vertical" >

    <com.gzqining.inthegarden.common.TopBarLayout
        android:id="@+id/topbarlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        title="个人信息" >

        <ImageButton
            android:id="@+id/top_layout_myinfo_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:src="@drawable/back_btn" />
    </com.gzqining.inthegarden.common.TopBarLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/common_bottom_bar_normal_bg" />
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:background="@color/common_content_bg"
			    >
            <RelativeLayout
                android:id="@+id/head_rl"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@color/common_content_bg" >

                <ImageView
                    android:id="@+id/head_to"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/to_right"
                    android:layout_marginRight="10dp" />
                
                <FrameLayout
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:padding="10dp"
                    android:layout_toLeftOf="@id/head_to" >

                    <ImageView
                        android:id="@+id/head_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/layermask" />
                </FrameLayout>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp"
                    android:text="头像"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_bottom_bar_normal_bg" />

            <RelativeLayout
                android:id="@+id/nickname_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="昵称"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/nickname_to"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/to_right" />
                
                <TextView 
                    android:id="@+id/nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DDDDDD"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@id/nickname_to"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_bottom_bar_normal_bg" />

            <RelativeLayout
                android:id="@+id/sign_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="签名"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/sign_to"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/to_right" />
                
                <TextView 
                    android:id="@+id/sign_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DDDDDD"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@id/sign_to"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
			</LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/common_bottom_bar_normal_bg" />
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:background="@color/common_content_bg"
			    >
            <RelativeLayout
                android:id="@+id/album_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="相册"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/to_right" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_bottom_bar_normal_bg" />
            <RelativeLayout
                android:id="@+id/infodetail_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="具体信息"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/to_right" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/common_bottom_bar_normal_bg" />
            <RelativeLayout
                android:id="@+id/phone_number_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="电话"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp" />
				<TextView 
                    android:id="@+id/phone_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#DDDDDD"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/phone_to"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/phone_to"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/to_right" />
            </RelativeLayout>
			</LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/common_bottom_bar_normal_bg" />
            
        </LinearLayout>
    </ScrollView>
	<RelativeLayout 
	    android:id="@+id/menu_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
	    >
        <Button 
	        android:id="@+id/album_addpw"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="8dp"
        	android:layout_marginRight="8dp"
	        android:background="@drawable/login_phonespw_bg"
	        android:gravity="center"
	        android:textColor="#000000"
	        android:text="加密" />
        <View 
            android:id="@+id/line_mine1"
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
        	android:layout_marginRight="8dp"
            android:layout_below="@+id/album_addpw"
            />
        <Button 
	        android:id="@+id/takephoto_mine"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="8dp"
        	android:layout_marginRight="8dp"
	        android:layout_below="@+id/line_mine1"
	        android:background="#ffffff"
	        android:gravity="center"
	        android:textColor="#000000"
	        android:text="拍照" />
        <View 
            android:id="@+id/line_mine2"
            android:background="#666666"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
        	android:layout_marginRight="8dp"
            android:layout_below="@+id/takephoto_mine"
            />
        <Button 
	        android:id="@+id/choose_from_album"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="8dp"
        	android:layout_marginRight="8dp"
	        android:layout_below="@+id/line_mine2"
	        android:background="@drawable/login_emailspw_bg"
	        android:gravity="center"
	        android:textColor="#000000"
	        android:text="从手机相册选择" />
	    <Button 
	        android:id="@+id/cancel_myinfo"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="8dp"
        	android:layout_marginRight="8dp"
	        android:layout_below="@+id/choose_from_album"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="12dp"
	        android:background="@drawable/login_cancel_bg"
	        android:gravity="center"
	        android:textColor="#000000"
	        android:text="取消" />
	</RelativeLayout>
</LinearLayout>