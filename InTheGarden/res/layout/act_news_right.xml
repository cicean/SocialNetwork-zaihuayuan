<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bottom_bar_normal_bg"
    android:orientation="vertical" >

    <com.gzqining.inthegarden.common.TopBarLayout
        android:id="@+id/topbarlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        title="更多" >

        <ImageButton
            android:id="@+id/top_layout_rightchoise_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:src="@drawable/back_btn" />
    </com.gzqining.inthegarden.common.TopBarLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/common_bottom_bar_normal_bg" />

            <LinearLayout
                android:id="@+id/rl_giftlist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/present_ic" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="礼物"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/nickname_to"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:src="@drawable/to_right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/common_bottom_bar_normal_bg" />

            <LinearLayout
                android:id="@+id/rl_maiduan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_content_bg"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/buy_out_ic" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="买断"
                    android:textColor="#BBBBBB"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/relation_to"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:src="@drawable/to_right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/common_bottom_bar_normal_bg" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>