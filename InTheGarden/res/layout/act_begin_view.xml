<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/begin_bg"
    android:gravity="center_horizontal" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="80dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_circle"
        android:padding="40dp" >

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thivaritthisa"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/sign_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt"
            android:text="迷失在远行的季节~"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_circle"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:background="#55010003" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_id"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp" >

                    <ImageView
                        android:id="@+id/circle_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_red" />

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img2" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp" >

                    <ImageView
                        android:id="@+id/circle_bg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_gray" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img1" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp" >

                    <ImageView
                        android:id="@+id/circle_bg3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_gray" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img3" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <FrameLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp" >

                    <ImageView
                        android:id="@+id/circle_bg4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/circle_gray" />

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img4" />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/kuanxiang"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" >

            <Button
                android:id="@+id/choise_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/register_bt_bg"
                android:padding="10dp"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/choise_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_bt_bg"
                android:padding="10dp"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/kuanxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="宽项互联，版权所有@2015"
            android:textColor="#333333" />
    </RelativeLayout>

</RelativeLayout>