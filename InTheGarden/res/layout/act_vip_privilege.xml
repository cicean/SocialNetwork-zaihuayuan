<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bottom_bar_normal_bg"
    android:orientation="vertical" >
    
    <com.gzqining.inthegarden.common.TopBarLayout
	     android:id="@+id/topbarlayout"
	     android:layout_width="fill_parent"
	     android:layout_height="50dp"
	     title="特权介绍" >

	     <ImageButton
	         android:id="@+id/top_layout_vip_privilege_back_btn"
	         android:layout_width="wrap_content"
	         android:layout_height="fill_parent"
	         android:layout_centerVertical="true"
	         android:background="@null"
	         android:contentDescription="@string/app_name"
	         android:paddingLeft="15dp"
	         android:paddingRight="18dp"
	         android:src="@drawable/back_btn" />
	 </com.gzqining.inthegarden.common.TopBarLayout>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
		    <ImageView 
		        android:id="@+id/vip_grade_img"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_marginTop="20dp"
		        android:src="@drawable/vip_grade_img"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginTop="20dp"
		        android:text="1.VIP收费"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="5dp"
		        android:text="VIP一次性付费2000元，包含1000元储值费用（可用于充值购买礼物、邀约买断）。"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginTop="5dp"
		        android:text="2.图片加密"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginTop="5dp"
		        android:text="3.消息发送分级"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="5dp"
		        android:text="可向下级、同级用户发送消息。但不可以向上级发送信息。"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginTop="5dp"
		        android:text="4.内容查看分级"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="5dp"
		        android:text="• 查看同级用户普通资料与具体资料，普通相册 ，除私隐相册。"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="5dp"
		        android:text="• 查看下级用户所有资料、包括私隐图片。"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="5dp"
		        android:text="• 查看上级普通资料、普通相册。"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginTop="5dp"
		        android:text="5.虚拟值变现"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="5dp"
		        android:text="VIP接受的虚拟值可以在一个月内没纠纷和其他问题的前提下变现，超过10000元公司收取30%服务费。"
		        android:textColor="#dddddd"
		        android:textSize="18sp"
		        />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
