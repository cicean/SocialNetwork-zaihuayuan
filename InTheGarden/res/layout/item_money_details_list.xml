<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_content_bg" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp">
        
        <TextView 
            android:id="@+id/name_money_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DDDDDD"
            android:textSize="18sp"
            android:text="Alexa"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="10" />
        
        <TextView 
            android:id="@+id/money_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#BBBBBB"
            android:textSize="16sp"
            android:text="买断她10天"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/name_money_detail_tv"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
           />
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:paddingTop="10dp"
        >
        <TextView 
            android:id="@+id/money_detail_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="2014-3-12"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"/>
        <TextView 
            android:id="@+id/money_detail_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FFBF00"
            android:textSize="16sp"
            android:text="-2000.00"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/money_detail_time_tv"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    
	</LinearLayout>
	<View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
