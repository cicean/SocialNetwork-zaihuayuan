<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    android:orientation="vertical" >
    <com.gzqining.inthegarden.common.TopBarLayout
        android:id="@+id/topbarlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        title="买断设置" >

        <ImageButton
            android:id="@+id/top_layout_maiduan_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:src="@drawable/back_btn" />
    </com.gzqining.inthegarden.common.TopBarLayout>
   <!--  <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#3C3C3C" /> -->
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        >
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        >
		        <FrameLayout
		             android:id="@+id/framelayout_mine"
		             android:layout_width="60dp"
		             android:layout_height="60dp"
		             android:layout_margin="20dp"
		             android:layout_centerInParent="true" >
		
		             <ImageView
		                 android:id="@+id/head_img_maiduan"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:scaleType="centerCrop"/>
		
		             <ImageView
		                 android:src="@drawable/layermask"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent" />
		         </FrameLayout>
		         <LinearLayout 
		             android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:orientation="vertical"
		             >
		             <TextView 
		                 android:id="@+id/nickname_maiduan"
		                 android:layout_width="match_parent"
		                 android:layout_height="wrap_content"
		                 android:layout_marginTop="20dp"
		                 android:text=""
		                 android:textColor="#DDDDDD"
		                 android:textSize="18sp"
		                 />
		             <TextView 
		                 android:id="@+id/to_her_or_him"
		                 android:layout_width="match_parent"
		                 android:layout_height="wrap_content"
		                 android:layout_marginTop="18dp"
		                 android:text="向TA发出买断申请"
		                 android:textColor="#DDDDDD"
		                 android:textSize="16sp"
		                 />
		         </LinearLayout>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:orientation="horizontal"
		        >
		        <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="20dp"
			        android:text="时间："
			        android:textColor="#DDDDDD"
			        android:textSize="18sp"
			        />
		        <TextView 
		            android:id="@+id/time_maiduan_tv" 
			        android:layout_width="match_parent"
			        android:layout_height="40dp"
			        android:layout_marginLeft="10dp"
			        android:layout_marginRight="25dp"
			        android:background="@drawable/yaoyue_inputbox_bg"
			        android:gravity="center_vertical"
			        android:padding="5dp"
			        android:hint="请选择"
			        android:textColor="#DDDDDD"
			        android:textSize="18sp"
			        />
		    </LinearLayout>
			<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:orientation="horizontal"
		        android:focusable="true"   
				android:focusableInTouchMode="true"
		        >
		        <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="20dp"
			        android:layout_marginTop="5dp"
			        android:gravity="top"
			        android:text="事项："
			        android:textColor="#DDDDDD"
			        android:textSize="18sp"
			        />
		        <EditText 
		            android:id="@+id/liyou_maiduan_et" 
			        android:layout_width="match_parent"
			        android:layout_height="120dp"
			        android:layout_marginLeft="10dp"
			        android:layout_marginRight="25dp"
			        android:layout_marginTop="5dp"
			        android:gravity="top"
			        android:background="@drawable/yaoyue_inputbox_bg"
			        android:padding="5dp"
			        android:hint="想拥有和你独处的一段时间"
			        android:textColor="#DDDDDD"
			        android:textSize="18sp"
			        />
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:orientation="horizontal"
		        
		        >
		        <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="20dp"
			        android:layout_marginTop="5dp"
			        android:text="礼物："
			        android:textColor="#DDDDDD"
			        android:textSize="18sp"
			        />
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
			        android:layout_marginTop="5dp"
			        android:layout_marginLeft="10dp"
			        android:background="#333333"
		            android:orientation="vertical"
		            >
			        <FrameLayout
			             android:layout_width="140dp"
			             android:layout_height="140dp"
			             android:layout_centerInParent="true" >
			
			             <ImageView
			                 android:id="@+id/gift_maiduan_img"
			                 android:layout_width="match_parent"
			                 android:layout_height="match_parent"
			                 android:src="@drawable/add_gift"
			                 android:scaleType="centerCrop" />
			             
			
			         </FrameLayout>
			        <TextView 
			            android:id="@+id/gift_name_maiduan"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:text="--"
				    	android:textColor="#DDDDDD"
				    	android:textSize="18sp"
			            />
			        <LinearLayout 
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:layout_marginTop="2dp"
					    android:gravity="center"
					    android:orientation="horizontal"
					    >
					    <!-- <ImageView 
					        android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	android:src="@drawable/money_gift"
					        /> -->
					    <TextView 
					        android:id="@+id/gift_price"
					        android:layout_width="wrap_content"
					    	android:layout_height="wrap_content"
					    	android:layout_marginLeft="5dp"
					    	android:text="--"
					    	android:textColor="#f0b500"
					    	android:textSize="18sp"
					        />
					</LinearLayout>
		        </LinearLayout>
		    </LinearLayout>
		    <Button 
		        android:id="@+id/confirm_maiduan"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:layout_marginTop="20dp"
		        android:layout_margin="20dp"
		        android:background="@drawable/login_bt_bg"
		        android:text="发起买断"
		        android:textColor="#FFFFFF"
		        android:textSize="18sp"
		        />
    	</LinearLayout>
    </ScrollView>
</LinearLayout>
