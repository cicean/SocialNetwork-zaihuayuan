<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_content_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/act_img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/act01" />

        </RelativeLayout>

        <TextView
            android:id="@+id/act_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="迪拜三日游"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingBottom="20dp" />

        <TextView
            android:id="@+id/introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:singleLine="true"
            android:text="领略异地风光，享受纸醉金迷之旅 "
            android:textColor="#B8B8B8"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/placeandtime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="55dp"
            android:singleLine="true"
            android:text="广州|03-10 "
            android:textColor="#B8B8B8"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl1"
        android:background="#90000000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >
        
        <TextView
            android:id="@+id/price_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="￥"
            android:textColor="#DD2553"
            android:textSize="20sp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000"
            android:textColor="#DD2553"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/price_unit_tv" />
        
        <ImageView 
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/join_num_icon"
            android:layout_toRightOf="@id/price_tv"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        
        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200人参加"
            android:textColor="#DD2553"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv" />
        
        <Button 
            android:id="@+id/join_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/join_btn"
            android:layout_centerVertical="true"
            android:paddingLeft="25dp"
            android:paddingTop="5dp"
            android:paddingRight="25dp"
            android:paddingBottom="5dp"/>
        
    </RelativeLayout>

</RelativeLayout>